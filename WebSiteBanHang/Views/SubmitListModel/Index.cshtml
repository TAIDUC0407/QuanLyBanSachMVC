@model WebSiteBanHang.Models.PhieuNhap

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    for (int i = 0; i < 10; i++)
    {
        <h2>Thông tin sản phẩm @i</h2>
        @*để mvc tự động trả dữ liệu model theo dạng list thì cách đặt tên như sau  ["chỉ số phần tử"].thuộc tính*@
        <input name="@Url.Content("["+i+"].MaSP")" value="@i" />
        <input name="@Url.Content("["+i+"].DonGiaNhap")" value="10000" /> <br />
        <input name="@Url.Content("["+i+"].SoLuongNhap")" value="100" /> <br />
    }
    <input type="submit" value="Đồng ý" />
}
