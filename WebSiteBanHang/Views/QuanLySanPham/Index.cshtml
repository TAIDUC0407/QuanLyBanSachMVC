@using WebSiteBanHang.Models
@model IEnumerable<SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //khởi tạo control webgrid...
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}

@*thể hiện dữ liệu thông qua control webgrid...*@
@grid.GetHtml(
tableStyle: "gridTable",
headerStyle: "gridHead",
footerStyle: "gridFooter",
rowStyle: "gridRow",
alternatingRowStyle: "gridAltRow",
columns: grid.Columns(
    grid.Column("MaSP", "Mã sản phẩm"),
    grid.Column("TenSP", "Tên sản phẩm"),
        //grid.Column("MoTa","Mô tả",format:p=>@Html.Raw(p.MoTa)),
    grid.Column("HinhAnh", "Hình ảnh", format: p => @Html.Raw("<img width=\"150\" height=\"50\" src=\"../Content/HinhAnhSP/" + p.HinhAnh + "\">")),
    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new {id=p.MaSP })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaSP }))
    ))
<style>
    .gridTable{
        width:100%; 
        border:1px solid #ff6a00;
    }
    .gridHead{
        background-color:red;
    }
    .gridHead>th>a {
        color:#ffffff;
    }
    .gridFooter{
        font-size:10pt;
        font-weight:bold;
    }
    .gridRow{
        color:#fff;
        background-color:#ff6a00;
    }
    .gridAltRow{
        color:#fff;
        background-color:#000000;
    }
</style>
